<header id="header">
    <div class="container">
        <div id="avatar" class="pull-right">
            <span class="fa-stack"></span>
            <span class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="">
                    <img src="{{assets '/images/avatar-32.png'}}" class="img-rounded"/>
                    <span class="caret"></span>
                </a>
                <ul id="person-dropdown" class="dropdown-menu">
                    <li>
                        <a href="/profile/form">{{gettext "The personal data provided"}}</a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="/auth/out" data-bypass>{{gettext "Logout"}}</a>
                    </li>
                </ul>
            </span>
        </div>
        <div id="logo" class="pull-left">
            {{#if href}} {{! 包含href的时候}}
            <a href="{{href}}" target="_blank" data-bypass>
            {{else}}
            <a href="/">
            {{/if}}
            {{#if logo}}
                <img src="{{logo}}" alt="logo">
            {{else}}
                <img src="{{assets '/images/logo.png'}}" alt="logo">
            {{/if}}
        </a>
        </div>
        <div class="title">
            <h1>{{title}}</h1>
        </div>
        <div class="clearfix"></div>
        <div class="container">
            <div id="state"></div>
        </div>
    </div>
    <nav class="navbar navbar-linkdesk">
        <div class="container">
            <div>
                <ul id="prog-mods" class="nav navbar-nav">
                    <li class="home"><a href="/">{{gettext 'Home'}}</a></li>
                    {{!--{{#isPermitted 'navbar:tickets'}}
                    <li class="tickets"><a href="/tickets/filters/my-tickets">{{gettext 'Tickets'}}</a></li>
                    {{/isPermitted}}

                    {{#isPermitted 'navbar:solutions'}}
                    <li class="solutions"><a href="/solutions">{{gettext 'Solutions'}}</a></li>
                    {{/isPermitted}}

                    {{#isPermitted 'navbar:customers'}}
                    <li class="customers"><a href="/contacts">{{gettext 'Customers'}}</a></li>
                    {{/isPermitted}}
                    {{#isPermitted 'navbar:settings'}}
                    <li class="settings"><a href="/settings">{{gettext 'Settings'}}</a></li>
                    {{/isPermitted}}

                    {{#isPermitted 'navbar:statistics'}}
                        <li class="statistics"><a href="/statistics">{{gettext 'Statistics'}}</a></li>
                    {{/isPermitted}}
                    {{#isPermitted 'navbar:register-machine'}}
                        <li class="register-machine"><a href="/register-machine">{{gettext 'Statistics'}}</a></li>
                    {{/isPermitted}}
                    --}}
                    {{#each authority}}
                        <li class="{{code}} top-nav-li"><a href="{{url}}">{{name}}</a></li>
                    {{/each}}
                </ul>
                <form class="navbar-form navbar-right" role="search">
                    <div class="form-group search">
                        <div class="input-group">
                            <input type="text" class="form-control" id="term" name="term" placeholder="" maxlength="128">
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-default search"><i class="fa fa-search"></i></button>
                            </span>
                        </div>
                    </div>
                </form>
                <ul class="nav navbar-nav navbar-right create">
                    <li>
                        <a href="/tickets/form" class="navbar-link"><i class="fa fa-plus"></i> {{gettext 'Create Ticket'}}</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div id="main"></div>
