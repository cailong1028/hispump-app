<div class="container customers">
    <div class="row">
        <div class="col-lg-9 col-md-9">
            <div class="panel panel-content">
                <div class="panel-heading">
                    <h3>{{gettext 'Update Personal'}}</h3>
                </div>
                <div class="panel-body">
                    <div class="tab-content">
                        <div class="tab-pane fade in active" role="tabpanel">
                            <div class="list">
                                <form class="form-horizontal" id="form1">
                                    <div class="form-group">
                                        <label for="username1" class="control-label col-lg-2 col-md-2">{{gettext 'User Name'}}</label>
                                        <div class="col-lg-10 col-md-10">
                                            <p class="form-control-static">{{loginname}}</p>
                                            <input name="loginname" id="loginname" type="hidden" value="{{loginname}}">
                                            <input name="id" id="id" type="hidden" value="{{id}}">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="name" class="col-lg-2 col-md-2 control-label required">{{gettext 'Name'}}</label>
                                        <div class="col-lg-10 col-md-10">
                                            <input id="name" name="username" class="form-control" maxlength="16"value="{{username}}">
                                        </div>
                                    </div>
                                    <div id="name_required" class="error-messages form-group">
                                        <div class="col-lg-offset-2 col-lg-10 col-md-offset-2 col-md-10">
                                            <span class="text-danger">{{gettext 'Name required'}}</span>
                                        </div>
                                    </div>
                                    {{!-- 工号--}}
                                    <div class="form-group">
                                        <label class="control-label col-lg-2 col-md-2">{{gettext 'WorkNum'}}</label>
                                        <div class="col-lg-10 col-md-10">
                                            <input id="worknum" name="worknum" maxlength="16" class="form-control" value="{{worknum}}" placeholder="{{gettext 'Agent WorkNum Placeholder'}}">
                                        </div>
                                    </div>
                                    <div id="alreadyExists_workNum" class="error-messages form-group">
                                        <div class="col-lg-offset-2 col-lg-10 col-md-offset-2 col-md-10">
                                            <span class="text-danger">{{gettext 'workNum has been exists'}}</span>
                                        </div>
                                    </div>
                                    {{!-- 手机--}}
                                    <div class="form-group">
                                        <label class="control-label col-lg-2 col-md-2">{{gettext 'Mobile'}}</label>
                                        <div class="col-lg-10 col-md-10">
                                            <input id="mobile" name="mobile" maxlength="32" class="form-control" value="{{mobile}}" placeholder="{{gettext 'Mobile'}}">
                                        </div>
                                    </div>
                                    {{!-- 职位-
                                    <div class="form-group">
                                        <label class="control-label col-lg-2 col-md-2">{{gettext 'Post'}}</label>
                                        <div class="col-lg-10 col-md-10">
                                            <input id="post" name="post" maxlength="16" class="form-control" value="{{post}}" placeholder="{{gettext 'Agent Post Placeholder'}}">
                                        </div>
                                    </div>-}}
                                    {{!-- 备注--}}
                                    <div class="form-group">
                                        <label for="remark" class="control-label col-lg-2 col-md-2">{{gettext 'Remark'}}</label>
                                        <div class="col-lg-10 col-md-10">
                                            <textarea id="memo" name="memo" maxlength="500" class="form-control" rows="8" placeholder="{{gettext 'Agent Remark Placeholder'}}">{{memo}}</textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-12 col-md-12 text-right">
                                            <a href="#" class="btn btn-default">{{gettext 'Cancel'}}</a>
                                            <button type="reset" id="reset" class="btn btn-default reset">{{gettext 'Reset'}}</button>
                                            <button type="submit" class="btn btn-primary save">{{gettext 'Save'}}</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>{{! panel-body end}}
            </div>{{! panel end}}
        </div>
        <div class="update-password col-lg-3 col-md-3">
        </div>
    </div>
</div>
<div class="confirm-view"></div>
