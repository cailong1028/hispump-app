<div class="panel panel-sidebar">
    <div class="panel-heading">
        <h5><label class="control-label">{{gettext 'Update password'}}</label></h5>
    </div>
    <div class="panel-body">
        <form id="form2">
            <div class="form-group">
                <input name="password" type="password"  autocomplete="off" class="form-control" placeholder="{{gettext 'Password'}}">
            </div>
            <div id="passwordNotMatch" class="error-messages form-group">
                <span class="text-danger">{{gettext 'Password not match'}}</span>
            </div>
            <div id="password_required" class="error-messages form-group">
                <span class="text-danger">{{gettext 'Password required'}}</span>
            </div>
            <div id="passwordError_required" class="error-messages form-group">
                <span class="text-danger">{{gettext 'password error required'}}</span>
            </div>
            <div id="passwordMinError_required" class="error-messages form-group">
                <span class="text-danger">{{gettext 'Password min error required'}}</span>
            </div>
            <div id="passwordMaxError_required" class="error-messages form-group">
                <span class="text-danger">{{gettext 'Password max error required'}}</span>
            </div>
            <div class="form-group">
                <input name="newPassword" type="password"  autocomplete="off" class="form-control" placeholder="{{gettext 'New password'}}">
            </div>
            <div id="newPassword_required" class="error-messages form-group">
                <span class="text-danger">{{gettext 'New passowrd required'}}</span>
            </div>
            <div id="newPasswordMinError_required" class="error-messages form-group">
                <span class="text-danger">{{gettext 'new password min error required'}}</span>
            </div>
            <div id="newPasswordMaxError_required" class="error-messages form-group">
                <span class="text-danger">{{gettext 'new password max error required'}}</span>
            </div>
            <div class="form-group">
                <input name="confirmPassword"  autocomplete="off" type="password" class="form-control" placeholder="{{gettext 'Confirm password'}}">
            </div>
            <div id="confirmPassword_required" class="error-messages form-group">
                <span class="text-danger">{{gettext 'Confirm Password required'}}</span>
            </div>
            <div id="confirmPasswordError_required" class="error-messages form-group">
                <span class="text-danger">{{gettext 'Confirm password Error required'}}</span>
            </div>
            <div id="confirmPasswordMinError_required" class="error-messages form-group">
                <span class="text-danger">{{gettext 'Confirm password min error required'}}</span>
            </div>
            <div id="confirmPasswordMaxError_required" class="error-messages form-group">
                <span class="text-danger">{{gettext 'Confirm password max error required'}}</span>
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary save">{{gettext 'Update password'}}</button>
            </div>
        </form>
    </div>
</div>
