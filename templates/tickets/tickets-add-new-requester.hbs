<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h5 class="modal-title">{{gettext "Quick Add Contacts"}}</h5>
        </div>
        <div class="modal-body">
            <form class="quick-add-contact form-horizontal form-group">
                <p><input type="text" name="name" class="form-control" placeholder="{{gettext 'Contact Name'}}"></p>
                <div id="name_required" class="error-messages">
                    <span class="text-danger">{{gettext "Name required"}}</span>
                </div>
                <p><input type="text" name="email" class="form-control" placeholder="{{gettext 'Email'}}"></p>
                <div id="mobile_or_email_required" class="error-messages">
                    <span class="text-danger">{{gettext "Email or Mobile required"}}</span>
                </div>
                <div id="invalidation_email" class="error-messages">
                    <span class="text-danger">{{gettext "Invalidation Email"}}</span>
                </div>
                <div id="email_duplicate" class="error-messages">
                    <span class="text-danger">{{gettext 'Email Duplicate'}}</span>
                </div>
                <p><input type="text" name="mobile" class="form-control" placeholder="{{gettext 'Mobile'}}">
                <div id="mobile_duplicate" class="error-messages">
                    <span class="text-danger">{{gettext 'Mobile Duplicate'}}</span>
                </div>
                </p>

                <p class="text-right">
                    <button class="add-new-contact-cancel btn btn-default">{{gettext "Cancel"}}</button>
                    <button type="submit" class="btn btn-primary">{{gettext "Create"}}</button>
                </p>
            </form>
        </div>
    </div>
</div>


