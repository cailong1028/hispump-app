<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-body">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <h2>{{gettext 'Field attributes'}}</h2>
                </div>
            </div>
            <div class="row row-margin-top-10">
                <div class="col-lg-12 col-md-12">
                    <label class="label-larger">{{gettext 'Actions'}}</label><br>
                    <div class="attrs-div">
                        <label>{{gettext 'For agent'}}</label><br>
                        <input id="need-when-submit-ticket" type="checkbox"
                            {{#if actions.agent.neededWhenSubmitTicket}}
                                checked
                            {{/if}}
                        ><label for="need-when-submit-ticket">{{gettext 'Needed when submit ticket'}}</label><br>
                        <input id="need-when-close-ticket" type="checkbox"
                            {{#if actions.agent.neededWhenCloseTicket}}
                               checked
                            {{/if}}
                        ><label for="need-when-close-ticket">{{gettext 'Needed when close ticket'}}</label><br>
                    </div>
                    <div class="attrs-div fr">
                        <label>{{gettext 'For customer'}}</label><br>
                        <input id="show-to-customer" type="checkbox"
                            {{#if actions.customer.couldSeeByCustomer}}
                               checked
                            {{/if}}
                        ><label for="show-to-customer">{{gettext 'Show to customer'}}</label><br>
                        <input id="could-edit-by-customer" type="checkbox"
                            {{#if actions.customer.couldEditByCustomer}}
                               checked
                            {{/if}}
                        ><label for="could-edit-by-customer">{{gettext 'Could edit by customer'}}</label><br>
                        <input id="need-when-submit-ticket-customer" type="checkbox"
                            {{#if actions.customer.neededWhenSubmitTicket}}
                               checked
                            {{/if}}
                        ><label for="need-when-submit-ticket-customer">{{gettext 'Needed when submit ticket'}}</label><br>
                    </div>
                </div>
            </div>
            <div class="row row-margin-top-10">
                <div class="col-lg-12 col-md-12">
                    <label class="label-larger">{{gettext 'Field title'}}</label><br>
                    <div class="attrs-div">
                        <label>{{gettext 'For agent'}}</label><br>
                        <input id="title-agent" class="form-control" value="{{title.agent}}">
                    </div>
                    <div class="attrs-div fr">
                        <label>{{gettext 'For customer'}}</label><br>
                        <input id="title-customer" class="form-control" value="{{title.customer}}">
                    </div>
                </div>
            </div>
            {{#if options}}
            <div id="options" class="row row-margin-top-10">

            </div>
            {{/if}}
            <div class="row row-margin-top-10">
                <div class="col-lg-12 col-md-12">
                    <div class="btn-groups">
                        <a id="delete" class="btn btn-default">{{gettext "delete"}}</a>
                    </div>
                    <div class="btn-groups fr">
                        <a id="cancel" class="btn btn-default" data-dismiss="modal">{{gettext "Cancel"}}</a>
                        <a id="save" class="btn btn-primary">{{gettext "Save"}}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

