<td class="avatar">
    <img src="{{assets '/images/avatar-32.png'}}" alt="avator" />
</td>
<td class="contacts">
    <p><a href="/settings/agents/{{id}}" title="{{loginname}}">{{loginname}}</a></p>
    {{#if post}}<br>{{post}}{{/if}}
</td>
<td class="contacts">
    {{#if username}}<span title="{{username}}">{{gettext 'Name'}}: {{username}}</span>{{/if}}
    {{#if workNum}}<br><span title="{{workNum}}">{{gettext 'WorkNum'}}: {{workNum}}</span>{{/if}}
    {{#if mobile}}<br><span title="{{mobile}}">{{gettext 'Mobile'}}: {{mobile}}</span>{{/if}}
</td>
<td class="contacts">
    {{#if createtime}} <span title="{{datetimeFormat createtime}}">{{gettext 'Create Time'}}: {{datetimeFormat createtime}}</span>{{/if}}
</td>
<td class="text-right">
{{#unless deleted}}
    <a href="/settings/agents/{{id}}/authority" class="btn btn-default btn-xs">{{gettext 'Authority'}}</a>
    <a href="/settings/agents/{{id}}/form" class="btn btn-default btn-xs">{{gettext 'Update'}}</a>
    {{#if isCurrentManager}}
    <button class="btn btn-default btn-xs delete"  disabled="disabled"><i class="fa fa-trash"></i></button>
    {{else}}
    <button class="btn btn-default btn-xs delete"><i class="fa fa-trash"></i></button>
    {{/if}}
{{else}}
    <button class="btn btn-default btn-xs restore">{{gettext 'Restore'}}</button>
{{/unless}}
</td>
