<div class="container">
    <div class="panel panel-content">
        <div class="panel-heading">
            <div class="row">
                <div class="col-lg-9 col-md-9">
                    <h3>
                        {{gettext 'Reset Password'}}
                    </h3>
                </div>
                <div class="col-lg-3 col-md-3">
                    <h5>
                        {{gettext 'Resetpassword agent title'}}
                    </h5>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-9 col-md-9">
                    <div class="tab-content">
                        <div class="tab-pane fade in active" role="tabpanel">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label for="username" class="col-lg-3 col-md-3 control-label">{{gettext 'User Name'}}</label>
                                    <div class="col-lg-9 col-md-9"><p class="form-control-static">{{loginname}}</p>
                                        <input name="username" id="username1" type="hidden" value="{{loginname}}">
                                        <input name="id" id="id" type="hidden" value="{{id}}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="col-lg-3 col-md-3 control-label required">{{gettext 'New password'}}</label>
                                    <div class="col-lg-9 col-md-9">
                                        <input id="password" name="password" autocomplete="off" type="password" placeholder="{{gettext 'New password'}}" class="form-control">
                                    </div>
                                </div>
                                <div id="password_required" class="error-messages form-group">
                                    <div class="col-lg-offset-3 col-lg-9 col-md-offset-3 col-md-9">
                                        <span class="text-danger">{{gettext 'New passowrd required'}}</span>
                                    </div>
                                </div>
                                <div id="passwordError_required" class="error-messages form-group">
                                    <div class="col-lg-offset-3 col-lg-9 col-md-offset-3 col-md-9">
                                        <span class="text-danger">{{gettext 'password error required'}}</span>
                                    </div>
                                </div>
                                <div id="passwordMinError_required" class="error-messages form-group">
                                    <div class="col-lg-offset-3 col-lg-9 col-md-offset-3 col-md-9">
                                        <span class="text-danger">{{gettext 'new password min error required'}}</span>
                                    </div>
                                </div>
                                <div id="passwordMaxError_required" class="error-messages form-group">
                                    <div class="col-lg-offset-3 col-lg-9 col-md-offset-3 col-md-9">
                                        <span class="text-danger">{{gettext 'new password max error required'}}</span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="confirmPassword" class="col-lg-3 col-md-3 control-label required">{{gettext 'Confirm password'}}</label>
                                    <div class="col-lg-9 col-md-9">
                                        <input id="confirmPassword" name="confirmPassword" autocomplete="off" type="password" placeholder="{{gettext 'Confirm password'}}" class="form-control">
                                    </div>
                                </div>
                                <div id="confirmPassword_required" class="error-messages form-group">
                                    <div class="col-lg-offset-3 col-lg-9 col-md-offset-3 col-md-9">
                                        <span class="text-danger">{{gettext 'Confirm Password required'}}</span>
                                    </div>
                                </div>
                                <div id="confirmPasswordMinError_required" class="error-messages form-group">
                                    <div class="col-lg-offset-3 col-lg-9 col-md-offset-3 col-md-9">
                                        <span class="text-danger">{{gettext 'Confirm password min error required'}}</span>
                                    </div>
                                </div>
                                <div id="confirmPasswordMaxError_required" class="error-messages form-group">
                                    <div class="col-lg-offset-3 col-lg-9 col-md-offset-3 col-md-9">
                                        <span class="text-danger">{{gettext 'Confirm password max error required'}}</span>
                                    </div>
                                </div>
                                <div id="confirmPasswordError_required" class="error-messages form-group">
                                    <div class="col-lg-offset-3 col-lg-9 col-md-offset-3 col-md-9">
                                        <span class="text-danger">{{gettext 'Confirm password Error required'}}</span>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <a href="/settings/agents/{{id}}" class="btn btn-default">{{gettext 'Cancel'}}</a>
                                    <button type="submit" class="btn btn-primary save">{{gettext 'Save'}}</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 text-muted">{{{gettext 'Resetpassword agent help document'}}}</div>
            </div>{{! panel-body end}}
        </div>{{! panel end}}
    </div>
</div>
