<div class="container">
    <div class="panel panel-content">
        <div class="panel-heading">
            <div class="row">
                <div class="col-lg-9 col-md-9">
                    <h3>
                        {{gettext 'Update dept'}}
                    </h3>
                </div>
                <div class="col-lg-3 col-md-3">
                    <h5>
                        {{gettext 'Update dept title'}}
                    </h5>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-2 col-md-2">
                    <div class="text-center">
                        <i class="fa fa-building fa-5x"></i>
                    </div>
                </div>
                <div class="col-lg-7 col-md-7">
                    <form id="dept-update-form" class="form-horizontal">
                        <h4>{{gettext 'Dept info'}}</h4>
                        <div class="form-group">
                            <label for="dept_code" class="col-lg-3 col-md-3 control-label required">{{gettext 'Dept code'}}</label>
                            <div class="col-lg-9 col-md-9">
                                <input id="dept_code" name="dept_code" class="form-control" maxlength="16" value="{{dept_code}}" disabled="disabled">
                            </div>
                        </div>
                        <div id="DeptAlreadyExists" class="error-messages form-group">
                            <div class="col-lg-offset-3 col-lg-9 col-md-offset-3 col-md-9">
                                <span class="text-danger">{{gettext 'Dept code already exists'}}</span>
                            </div>
                        </div>
                        <div id="invalidDeptCode" class="error-messages form-group">
                            <div class="col-lg-offset-3 col-lg-9 col-md-offset-3 col-md-9">
                                <span class="text-danger">{{gettext 'Dept code required'}}</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="dept_name" class="col-lg-3 col-md-3 control-label required">{{gettext 'Dept name'}}</label>
                            <div class="col-lg-9 col-md-9">
                                <input id="dept_name" name="dept_name" class="form-control" maxlength="16" value="{{dept_name}}">
                            </div>
                        </div>
                        <div id="invalidDevName" class="error-messages form-group">
                            <div class="col-lg-offset-3 col-lg-9 col-md-offset-3 col-md-9">
                                <span class="text-danger">{{gettext 'Dept name required'}}</span>
                            </div>
                        </div>
                        <div class="text-right">
                            <button type="button" class="btn btn-default cancel">{{gettext 'Cancel'}}</button>
                            <button type="reset" id="reset" class="btn btn-default reset">{{gettext 'Reset'}}</button>
                            <button type="submit" class="btn btn-primary save">{{gettext "Save"}}</button>
                        </div>
                    </form>
                </div>
                <div class="col-lg-3 col-md-3 text-muted">{{{gettext 'update dept help document'}}}</div>
            </div>
        </div>
    </div>
</div>
