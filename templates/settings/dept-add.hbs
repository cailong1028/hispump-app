<div class="container">
    <div class="panel panel-content">
        <div class="panel-heading">
            <div class="row">
                <div class="col-lg-9 col-md-9">
                    <h3>
                        {{gettext 'Add dept'}}
                    </h3>
                </div>
                <div class="col-lg-3 col-md-3">
                    <h5>
                        {{gettext 'Add dept title'}}
                    </h5>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-2 col-md-2">
                    <div class="text-center">
                        <i class="fa fa-building fa-5x"></i>
                    </div>
                </div>
                <div class="col-lg-7 col-md-7">
                    <form id="dept-add-form" class="form-horizontal">
                        <h4>{{gettext 'Dept info'}}</h4>
                        <div class="form-group">
                            <label for="name" class="col-lg-3 col-md-3 control-label required">{{gettext 'Dept name'}}</label>
                            <div class="col-lg-9 col-md-9">
                                <input id="name" name="name" class="form-control" maxlength="16">
                            </div>
                        </div>
                        <div id="DeptAlreadyExists" class="error-messages form-group">
                            <div class="col-lg-offset-3 col-lg-9 col-md-offset-3 col-md-9">
                                <span class="text-danger">{{gettext 'Dept name already exists'}}</span>
                            </div>
                        </div>
                        <div id="invalidDeptName" class="error-messages form-group">
                            <div class="col-lg-offset-3 col-lg-9 col-md-offset-3 col-md-9">
                                <span class="text-danger">{{gettext 'Dept name required'}}</span>
                            </div>
                        </div>
                        <div class="text-right">
                            <button type="button" class="btn btn-default cancel">{{gettext 'Cancel'}}</button>
                            <button type="reset" id="reset" class="btn btn-default reset">{{gettext 'Reset'}}</button>
                            <span class="btn-group dropup submits">
                                <button type="submit" class="btn btn-primary save">{{gettext "Save"}}</button>
                                <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-right" role="menu">
                                    <li><a class="save-close" href="#save-close"  data-bypass>{{gettext "Save And Close"}}</a></li>
                                    <li class="divider"></li>
                                    <li><a class="save-continue" href="#save-continue" data-bypass>{{gettext "Save And Continue"}}</a></li>
                                </ul>
                            </span>
                        </div>
                    </form>
                </div>
                <div class="col-lg-3 col-md-3 text-muted">{{{gettext 'Add dev help document'}}}</div>
            </div>
        </div>
    </div>
</div>
