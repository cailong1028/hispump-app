<div class="container">
    <div class="panel panel-content">
        <div class="panel-heading">
            <div class="row">
                <div class="col-lg-9 col-md-9">
                    <h3>
                        {{gettext 'Add devdrug'}}
                    </h3>
                </div>
                <div class="col-lg-3 col-md-3">
                    <h5>
                        {{gettext 'Add devdrug title'}}
                    </h5>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-2 col-md-2">
                    <div class="text-center">
                        <i class="fa fa-exclamation-triangle fa-5x"></i>
                    </div>
                </div>
                <div class="col-lg-7 col-md-7">
                    <form id="devdrug-add-form" class="form-horizontal">
                        <h4>{{gettext 'Devdrug info'}}</h4>
                        <div class="form-group">
                            <label class="col-md-3 col-lg-3">{{gettext 'Dept'}}</label>
                            <div class="col-md-9 col-lg-9">
                                <input id="deptid" class="group-select form-control" name="deptid" type="text">
                                <span id="requesterNameInvalid" class="error-messages text-danger">{{gettext "Deptid required"}}</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="required col-md-3 col-lg-3">{{gettext 'Dev'}}</label>
                            <div class="col-md-9 col-lg-9">
                                <input id="cartid" class="group-select form-control" name="cartid" type="text">
                                <span id="cartidInvalid" class="error-messages text-danger">{{gettext "Cartid required"}}</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="required col-md-3 col-lg-3">{{gettext 'Drug'}}</label>
                            <div class="col-md-9 col-lg-9">
                                <input id="drugid" class="group-select form-control" name="drugid" type="text">
                                <span id="DrugInvalid"
                                      class="error-messages text-danger">{{gettext "Drug required"}}</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="required col-md-3 col-lg-3">{{gettext 'Drugwarning'}}</label>
                            <div class="col-md-9 col-lg-9">
                                <input id="drugwarning" class="number form-control" name="drugwarning" maxlength="10">
                                <span id="drugwarningInvalid"
                                      class="error-messages text-danger">{{gettext "Drugwarning required"}}</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="required  col-md-3 col-lg-3">{{gettext 'Drugoverflow'}}</label>
                            <div class="col-md-9 col-lg-9">
                                <input id="drugoverflow" class="number form-control" name="drugoverflow" type="text"
                                       maxlength="10">
                                <span id="drugoverflowInvalid"
                                      class="error-messages text-danger">{{gettext "Drugoverflow Request"}}</span>
                                <span id="DevdrugAlreadyExists"
                                      class="error-messages text-danger">{{gettext "Devdrug already exists"}}</span>
                            </div>
                        </div>

                        <div class="text-right">
                            <button type="button" class="btn btn-default cancel">{{gettext 'Cancel'}}</button>
                            <button type="reset" id="reset" class="btn btn-default reset">{{gettext 'Reset'}}</button>
                            <span class="btn-group dropup submits">
                                <button type="submit" class="btn btn-primary save">{{gettext "Save"}}</button>
                                <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-right" role="menu">
                                    <li><a class="save-close" href="#save-close"  data-bypass>{{gettext "Save And Close"}}</a></li>
                                    <li class="divider"></li>
                                    <li><a class="save-continue" href="#save-continue" data-bypass>{{gettext "Save And Continue"}}</a></li>
                                </ul>
                            </span>
                        </div>
                    </form>
                </div>
                <div class="col-lg-3 col-md-3 text-muted">{{{gettext 'Add devdrug help document'}}}</div>
            </div>
        </div>
    </div>
</div>
